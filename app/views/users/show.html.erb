<div class="container">
  <% if notice %>
      <p id="notice"><%= notice %></p>
  <% end %>
    <p>
        <h2>User <em><%= @user.first_name %> <%= @user.last_name %></em></h2>
    </p>

  <div class="container">
    <table class="table table-condensed table-striped" style="border-style:solid; border-color:#63B8FF">
      <tbody>
          <tr>
            <th>Role</th>
            <td>
              <% @roles = @user.roles %>
              <% @roles.each do |r| %>
                  <%= r.name  %>
              <% end %>
            </td>
          </tr>
          <tr>
            <th>Login</th>
            <td><%= @user.login %></td>
          </tr>
          <tr>
            <th>First_name</th>
            <td><%= @user.first_name  %></td>
          </tr>
          <tr>
            <th>Last_name</th>
            <td><%= @user.last_name ||= "empty" %></td>
          </tr>
          <tr>
            <th>Email</th>
            <td><%= @user.email %></td>
          </tr>
      </tbody>
    </table>

  </div>
  <%= link_to 'Back', users_path, :class => 'btn btn-primary' %>

  <% if current_user && current_user.editor? %>
        <%= link_to 'Edit', edit_user_path(@user), :class => 'btn btn-primary' %>
  <% end %>

  <% if current_user && current_user.admin? %>
      <%= link_to 'Destroy', user_path(@user), :class => 'btn btn-primary',
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>
  <% end %>

</div>