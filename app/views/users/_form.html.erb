<style>
  .fix {
      float: right;
  }
</style>
<%= form_for(@user, html: { class: 'form-horizontal' })  do |u| %>

    <div class="form-group">

      <div class="col-sm-10 col-md-offset-2">
        <% if @user.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@user.errors.count, "error") %> prohibited this usser from being saved:</h2>

              <ul>
                <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
      <%= u.label :first_name, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= u.text_field :first_name, :class => 'form-control input-responsive' %>
      </div>
      </div>
    </div>

    <div class="form-group">
      <%= u.label :last_name, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= u.text_field :last_name, :class => 'form-control input-responsive' %>
      </div>
    </div>

    <div class="form-group">
      <%= u.label :email, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= u.text_field :email, :class => 'form-control input-responsive' %>
      </div>
    </div>

    <div class="form-group">
      <%= u.label :password, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= u.password_field :password, :class => 'form-control input-responsive' %>
      </div>
    </div>

    <div class="form-group">
      <%= u.label :password_confirmation, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= u.password_field :password_confirmation, :class => 'form-control input-responsive' %>
      </div>
    </div>

    <div class="form-group">
      <%= u.label :role_name, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= u.select :role_ids, Role.all.collect {|x| [x.name, x.id]}, {}, :multiple => true, :row => 2, :class => 'form-control input-responsive' %>
      </div>
    </div>

    <div class="form-group">
      <div class="actions">
        <div class="col-sm-offset-2 col-sm-10">
          <%= u.submit :class => 'btn btn-primary' %>
        </div>
      </div>
    </div>
<% end %>