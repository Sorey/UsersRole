<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="col-sm-11">
        <h1>Please Log In</h1>
      </div>
      <div class="col-sm-1"></div>

      <div class="form">
        <% if flash[:alert] %>
            <p id="notice"><%= flash[:alert] %></p>
        <% end %>
        <%= form_tag( {action: 'create'}, { class: 'form-horizontal'}) do %>
              <div class="form-group">
                <div class="field">
                  <%= label_tag :login, 'Login:', :class => 'col-sm-2 control-label' %>
                  <div class="col-sm-10">
                    <%= text_field_tag :login, params[:login], :class => 'form-control input-responsive' %>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <div class="field">
                  <%= label_tag :password, 'Password:', :class => 'col-sm-2 control-label' %>
                  <div class="col-sm-10">
                    <%= password_field_tag :password, params[:password], :class => 'form-control input-responsive' %>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <div class="actions">
                  <div class="col-sm-offset-2 col-sm-10">
                    <%= submit_tag "Login", :class => 'btn btn-primary' %>
                  </div>
                </div>
              </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
